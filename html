 <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"> </script>  

<script type = "text/javascript">  
function calculate() {   
 if(isNaN(document.forms["giftcardcal"]["gift-card-type"].value) || document.forms["giftcardcal"]["gift-card-type"].value=="") {   
 var text1 = 0;   
 } else {   
 var text1 = parseInt(document.forms["giftcardcal"]["gift-card-type"].value);   
 }   
 if(isNaN(document.forms["giftcardcal"]["amount"].value) || document.forms["giftcardcal"]["amount"].value=="") {   
 var text2 = 0;   
 } else {   
 var text2 = parseFloat(document.forms["giftcardcal"]["amount"].value);   
 }   
 document.forms["giftcardcal"]["textbox5"].value = ("N" + text1*text2);   
 }  
</script>  
